#include <stdio.h>

int main()
{
	int const array[] = { 1, 2, 3, 4, 5, 6, 8 };

	for (int i = 0; i < sizeof array / sizeof array[0]; i++)
	{
		printf("array[%i] = %i", i, array[i]);
	}
}

