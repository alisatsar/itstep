#include <stdio.h>

int main()
{
	int k = 135;
	int count = 0;
	int summ = 0;
	int zeroCount = 0;

	do
	{
		int ostatok = k % 10;
		if (ostatok == 0)
		{
			++zeroCount;
		}
		k = k / 10;
		summ += ostatok; 
		count++;
		printf("%i\n", ostatok);
	} while (k != 0);

	printf("count = %i\n", count);
	printf("summ = %i\n", summ);
}
